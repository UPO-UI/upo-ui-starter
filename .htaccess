# upo-ui-starter/.htaccess - Root-level config for shared hosting

Options -Indexes  # Prevent directory listing

RewriteEngine On

# Rewrite all /api/* requests to api/public/index.php
RewriteRule ^api/(.*)$ api/public/index.php [L]

# If you have index.html instead of index.php, add:
# DirectoryIndex index.html index.php 